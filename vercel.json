{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        }
    ],
  "rewrites": [
    { "source": "/api", "destination": "/" },
    { "source": "/api/users", "destination": "/" },
    { "source": "/api/users/search", "destination": "/" },
    { "source": "/api/users/create_account", "destination": "/" },
    { "source": "/api/users/login_account", "destination": "/" },
    { "source": "/api/users/delete_account/:username", "destination": "/" },
    { "source": "/api/spotify/download/:id", "destination": "/" },
    { "source": "/api/spotify/top_tracks", "destination": "/" },
    { "source": "/spotify/get_top_tracks", "destination": "/" },
    { "source": "/api/mailer/send_signup_email_otp", "destination": "/" },
    { "source": "/api/mailer/verify_signup_email_otp", "destination": "/" }
  ]
}
